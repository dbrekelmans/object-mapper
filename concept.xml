<mapping from="Namespace\Class" to="Namespace\Class">
    <constructor>
        <argument/> <!-- see method argument -->
    </constructor>
    <properties>
        <property name="propertyName">
            <from/> <!-- see method argument from -->
            <constraints/> <!-- see method argument constrains -->
            <transformers/> <!-- see method argument transformers -->
        </property>
    </properties>
    <methods>
        <method name="methodName">
            <argument> <!-- from static value -->
                <from extractor="static">static value</from>
            </argument>
            <argument><!-- from property -->
                <from extractor="property">propertyName</from>
            </argument>
            <argument><!-- from method -->
                <from extractor="method">methodName</from>
            </argument>
            <argument><!-- constraint -->
                <from type="method">methodName</from>
                <constraints>
                    <constraint class="Namespace\Class">
                        <option name="optionName">option value</option>
                    </constraint>
                </constraints>
            </argument>
            <argument><!-- transformer -->
                <from type="method">methodName</from>
                <transformers>
                    <transformer class="Namespace\Class">
                        <option name="optionName">option value</option>
                    </transformer>
                </transformers>
            </argument>
            <argument> <!-- from static value with type transformer -->
                <from extractor="static">1</from>
                <transformers>
                    <transformer class="ObjectMapper\Transformer\TypeTransformer">
                        <option name="type">integer</option>
                    </transformer>
                </transformers>
            </argument>
        </method>
    </methods>
</mapping>
